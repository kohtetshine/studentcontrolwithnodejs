<h3><a href="/student" class="btn btn-secondary">Create New</a> Student List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        {{ #each list }}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/student/{{ this.id }}" class="btn btn-primary btn-sm">Edit</a>
                <a href="/student/delete/{{ this.id }}" class="btn btn-danger btn-sm" onclick="return confirm('Are You Sure Want To Delete This Record?')">Delete</a>
            </td>
        </tr>
        {{ /each }}
    </tbody>
</table>